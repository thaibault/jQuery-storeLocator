html
    head
        meta(charset='utf-8')
        // Prevent browser caching
        meta(http-equiv='cache-control' content='no-cache')
        meta(http-equiv='expires' content='0')
        meta(http-equiv='pragma' content='no-cache')
        title playground
        style.
            store-locator {
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
            }
            store-locator > div {
                height: 100%;
            }
            store-locator input {
                margin-top: 9px;
                width: 230px;
                height: 25px;
            }
    script.
        window.onload = () => {
            const bounds = {
                northEast: {latitude: 55.12, longitude: 14.89},
                southWest: {latitude: 47.32, longitude: 5.50}
            }
            jQueryStoreLocator.index.default('store-locator').StoreLocator({
                api: {key: 'AIzaSyBAoKgqF4XaDblkRP4-94BITpUKzB767LQ'},
                ipToLocation: {bounds},
                limit: {zoom: {minimum: 5}, bounds},
                map: {zoom: 5},
                stores: bounds
            })
        }
body: store-locator: input
